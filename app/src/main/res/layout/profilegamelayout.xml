<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

   <RelativeLayout
       android:layout_width="match_parent"
       android:padding="15dp"
       android:layout_height="wrap_content">

           <androidx.cardview.widget.CardView
           android:id="@+id/prof_game_image_card"
           android:layout_width="80dp"
           android:layout_height="80dp"
               app:cardCornerRadius="20dp"
           android:orientation="vertical"
           android:layout_alignParentLeft="true"
           android:foreground="@drawable/gamecardbackground"
           android:layout_alignParentStart="true">

           <ImageView
               android:id="@+id/prof_game_image"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:scaleType="fitXY"
               android:background="@drawable/gameimagebackground"
               android:src="@drawable/dummyimage" />
       </androidx.cardview.widget.CardView>

       <LinearLayout
           android:layout_toRightOf="@+id/prof_game_image_card"
           android:layout_toLeftOf="@+id/prof_right_icon"
           android:layout_margin="5dp"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">


           <TextView
               android:id="@+id/prof_achivement"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/mulishbold"
               android:text="Acheivement"
               android:textColor="#000"
               android:textSize="20sp" />

           <TextView
               android:id="@+id/prof_progress_status"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:fontFamily="@font/mulishlight"
               android:textColor="#000"
               android:paddingTop="5dp"
               android:textSize="16sp" />


           <ProgressBar
               android:id="@+id/prof_progressbar"
               android:layout_width="match_parent"
               android:layout_height="15dp"
               android:paddingTop="5dp"
               android:gravity="center_vertical"
               android:progressDrawable="@drawable/horizontalprogressbarprofilegame"
               style="?android:attr/progressBarStyleHorizontal" />


       </LinearLayout>

       <ImageView
           android:id="@+id/prof_right_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/chevronright"
           android:layout_centerInParent="true"
           android:layout_alignParentRight="true"
           android:layout_alignParentEnd="true" />

   </RelativeLayout>

    <LinearLayout
       android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/lightgrey"/>


</LinearLayout>